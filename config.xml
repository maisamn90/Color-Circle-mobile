<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.colorcircle.game" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Color Circle</name>
  <description>
      Easy, funny and addicting way to exercise brain memory!
  </description>
  <author email="dev@cordova.apache.org" href="http://cordova.io">
      Mais Ammaneh
  </author>
  <preference name="phonegap-version" value="cli-7.1.0" />
  <content src="index.html" />
  <icon src="icon.png" />
  <splash src="icon.png" width="320" height="480"/>
  <!-- <manifest android:hardwareAccelerated="true" android:versionCode="1" android:versionName="1.0.1" android:windowSoftInputMode="adjustPan" package="ca.colorcircle.game" xmlns:android="http://schemas.android.com/apk/res/android"> -->
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-targetSdkVersion" value="26" />
      <allow-intent href="market:*" />
      <preference name="Fullscreen" value="true" />
  </platform>
</widget>